@page
@model ECommerceWebsite.Pages.OrderHeaders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>OrderHeader</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderHeader.OrderHeaderID" />
            <div class="form-group">
                <label asp-for="OrderHeader.CustomerID" class="control-label"></label>
                <select asp-for="OrderHeader.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="OrderHeader.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderHeader.Date" class="control-label"></label>
                <input asp-for="OrderHeader.Date" class="form-control" />
                <span asp-validation-for="OrderHeader.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderHeader.ShippingAddress" class="control-label"></label>
                <input asp-for="OrderHeader.ShippingAddress" class="form-control" />
                <span asp-validation-for="OrderHeader.ShippingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
